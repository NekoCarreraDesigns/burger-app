<h1 id="neon">Nikki Carrera's Burger Shack</h1>

<ul id="eat-me">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers devoured=false}}
    {{/unless}}
    {{/each}}

</ul>

<ul id="devoured">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers devoured=true}}
    {{/if}}
    {{/each}}
</ul>


<form action="/api/burgers/create" method="POST">
    <div id="menu-item">
        <label class="noob-saibot" for="new">Add Burger</label>
        <input type="text" id="burger" name="burger">
    </div>
    <button class="grill-it" type="submit" name="new-burger">Grill It!</button>
</form>